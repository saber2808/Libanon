@model Libanon.Models.Book

@{
    ViewBag.Title = "Rating";
}

<h2>Rating</h2>


@using (Html.BeginForm("Rating", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
