@model Libanon.Models.Book

@{
    ViewBag.Title = "ReturnBook";
}

<h2>ReturnBook</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Book</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="col-md-12">
        @if (TempData["Status"] != null)
        {
            <div class="alert-box success"><span>success: </span>@TempData["Status"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert-box error"><span>error: </span>@TempData["Error"]</div>
        }
    </div>
    @using (Html.BeginForm("ReturnBook", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-md-12">
            <p>Email</p>
            <input id="EmailOwner" name="EmailOwner" type="text" />
        </div>
        <div class="col-md-12">
            <p>Full name</p>
            <input id="FullNameOwner" name="FullNameOwner" type="text" />
        </div>
        <div class="col-md-12">
            <p>Phone Number</p>
            <input id="PhoneNumberOwner" name="PhoneNumberOwner" type="text" />
        </div>
        <div class="col-md-12">
            <p>Description</p>
            <input id="DescOwner" name="DescOwner" type="text" />
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
